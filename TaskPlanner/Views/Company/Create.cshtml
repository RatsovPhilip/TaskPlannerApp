@using TaskPlanner.Web.Models;
@model CompanyCreateCheckNameViewModel;
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="card o-hidden border-bottom-danger shadow-lg my-5">
            <div class="card-body p-0">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h4 class="h4 text-gray-900 mb-4">Create Team</h4>
                                <hr />
                                <h4 class="h5 text-gray-900 mb-4">Tell us your company name</h4>
                            </div>
                            <form id="account" method="post">
                                <div class="form-group text-gray-900">
                                    <label asp-for="Name"></label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group text-gray-900">
                                    <label asp-for="FieldOfService"></label>
                                    <input asp-for="FieldOfService" class="form-control" />
                                    <span asp-validation-for="FieldOfService" class="text-danger"></span>
                                </div>
                                <div class="form-group text-gray-900">
                                    <label asp-for="Address"></label>
                                    <input asp-for="Address" class="form-control" />
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                                <div class="form-group text-gray-900">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="col-lg-6 bg-gradient-warning">
                        <div class="p-4">
                            <img class="img-fluid"  src="~/img/AppForm_abstract_0.png" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

