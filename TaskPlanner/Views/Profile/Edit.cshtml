@using TaskPlanner.ViewModels;
@model ProfileEditViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" enctype="multipart/form-data" asp-controller="Profile" asp-action="Edit" asp-route-id="@Model.Id">
    <div class="row justify-content-center">
        <div class="col-xl-12 col-lg-12 col-md-9">
            <div class="card o-hidden border-bottom-danger shadow-lg my-5">
                <div class="card-body p-3">
                    <h1 class="text-gray-900 text-center">Edit Profile</h1>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <label asp-for="@Model.Email"></label>
                                    <input asp-for="@Model.Email" class="form-control" />
                                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                                    <hr />
                                    <label asp-for="@Model.FullName"></label>
                                    <input asp-for="@Model.FullName" class="form-control" />
                                    <span asp-validation-for="@Model.FullName" class="text-danger"></span>
                                    <hr />
                                    <div>Company Name : @Model.CompanyName</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <div>Profile picture :</div>
                                    <input type="file" name="Images">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="text-center">
                <button type="submit" class="btn btn-outline-info mb-2 text-center">Submit</button>
            </div>
        </div>
    </div>
</form>



