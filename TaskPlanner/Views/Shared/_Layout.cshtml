<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TaskPlanner</title>

    <!-- all css here -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/sb-admin-2.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/lib/fontawesome-free/css/all.min.css" rel="stylesheet" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/lib/datatables/dataTables.bootstrap4.min.css" rel="stylesheet" asp-append-version="true">

</head>
<body class="bg-gradient-primary">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TaskPlanner</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav">
                        @if (!this.User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item active">
                                <a class="nav-link" href="/Identity/Account/Login">Login</a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" href="/Identity/Account/Register">Register</a>
                            </li>
                        }
                        else if (this.User.IsInRole("Administrator"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Projects
                                </a>
                                <div class="dropdown-menu dropdown-menu-right animated--grow-in" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="/Projects/Add">Add</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="/Projects/Manage">Manage</a>
                                </div>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" href="/Company/Promote">Promote</a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" href="/TimeSheet/Me">My Planner</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Profile
                                </a>
                                <div class="dropdown-menu dropdown-menu-right animated--grow-in" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="/Profile/Me">My Profile</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="/Identity/Account/Logout">Sign out</a>
                                </div>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Projects
                                </a>
                                <div class="dropdown-menu dropdown-menu-right animated--grow-in" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="/Projects/Manage">View</a>
                                </div>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" href="/TimeSheet/Me">My Planner</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Profile
                                </a>
                                <div class="dropdown-menu dropdown-menu-right animated--grow-in" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="/Profile/Me">My Profile</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="/Identity/Account/Logout">Sign out</a>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <partial name="_CookieConsentPartial" />
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted">
        <div class="bg-light">
            <div class="container">
                <div class="text-center">
                    &copy; @DateTime.Now.Year - TaskPlanner -
                </div>
            </div>
        </div>
    </footer>

    <!-- all js here -->
    <script src="~/lib/jquery/dist/jquery.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-easing/jquery.easing.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/sb-admin-2.min.js" asp-append-version="true"></script>
    <script src="~/lib/datatables/jquery.dataTables.min.js" asp-append-version="true"></script>
    <script src="~/lib/datatables/dataTables.bootstrap4.min.js" asp-append-version="true"></script>
    <script src="~/js/demo/datatables-demo.js" asp-append-version="true"></script>

    @this.RenderSection("Scripts", required: false)
</body>
</html>
